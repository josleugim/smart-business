html, body
  height 100%
.navbar
  margin-bottom 0px
#toast-container
  margin 40px auto auto auto
.error
  color red
  font-size 0.8em
  font-weight bold
.mark-up
  background-color #3e9bba
  margin-bottom 50px
  position relative
  .toggle-menu
    display block
    left 0
    margin 0 0 0 0
    position absolute
    width: 62px
    height: 55px
  .aside-menu
    height 100%
    position absolute
    width 0px
  .views-content
    background-color #f8f8f8
    .product-form
      #save-location
        display none
    .category-form
      #save-category
        display none
    .brand-form
      #save-brand
        display none
    .seller-form
      #save-seller
        display none
    .cart-wrapper
      min-height 200px
      position relative
      #loader
        background-image url("../images/loader.gif")
        background-color transparent
        background-position center center
        display: none
        height 150px
        left 50%
        margin-left -100px
        position absolute
        top 1px
        width 200px
        z-index 1
.checkout-product
  background-color #82dabf
  border 2px transparent
  border-radius 4px
  position relative
  p
    margin 2px 0 2px 10px
  .remove-icon
    position absolute
    right 10px
    top 20%
.total
  background-color #82dabf
  border 2px transparent
  border-radius 4px
  p
    margin 2px 0 2px 10px
.amount
  width 50px
.checkout-btn
  font-size 1.5em
  height 50px
  width 100%
.checkout-btn:hover
  background-color #7fdbbf
.chart div
  font 10px sans-serif
  background-color steelblue
  text-align right
  padding 3px
  margin 1px
  color white
.inventory
  p
    font-size 0.8em
  .location
    font-size: 0.6em
    font-weight: bolder
  table
    width 100%
footer
  background-color #3e9bba
  bottom 0
  height 50px
  position fixed
  width: 100%